<footer class="footer mb-l">
  <h2 class="footer-h2"><%= title %></h2>
  <ul class="tiles">
    <% current = current_page.url.split('/').last %>
    <% content.sort_by{ |index| rand }.each do |id, this| %>
    <%= partial "partials/tile", :locals => { :this => this, :dir => "/#{this.content_type_id}/", :secondary => 'View' } %>
    <% end %>
  </ul>
</footer>
