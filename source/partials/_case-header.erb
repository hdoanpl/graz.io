<div class="case-header" style="background:<%= this.bgColor ? (this.bgColor) : ('#000') %>;">
  <div class="row">
      <div class="case-content" style="color:<%= this.textColor ? (this.textColor) : ('#999') %>">
        <% if locals.key?(:subheader) %>
          <span class="small fadeInDown"><%= subheader %></span>
        <% end %>
        <h1 class="h0">
          <% wrapped = word_wrap(this.titleHover.sub(this.title, "<i>#{this.title}</i>"), line_width: 1)%>
          <% splitted = wrapped.each_line.each do | lines |%>
            <span class="reveal"><%= lines %></span>
          <% end %>
        </h1>
      </div>
  </div>
</div>
