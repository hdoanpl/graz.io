<li class="reveal tile fl <%= 'promoted' if this.promoted == true %>" data-lspacer="<%= this.leftSpacing %>">
  <a class="tile-link" href="<%= dir %><%= this.title.parameterize %>">
    <div class="tile-content" style="color: <%= this.textColor ? (this.textColor) : ('#999');%>">
      <h2><%= this.titleHover.sub(this.title, "<span>#{this.title}</span>")%></h2>
      <span class="f5">
        <%= secondary %>
        <span class="readmore" href="<%= this.title.parameterize %>"><%= partial(:'partials/arrow', :locals => { :strokecolor => this.textColor }) %></span>
      </span>
    </div>
    <div class="tile-bg" >
      <% if this.key? :thumbnail %>
        <div class="tile-image">
          <%= partial(:'partials/image', :locals => { :imageurl => this.thumbnail['url'], :alt => this.thumbnail['title'] }) %>
        </div>
      <% end %>
      <div class="tile-cover" style="background: <%= this.bgColor ? (this.bgColor) : ('#000') %> ">
      </div>
      <% color = darken_color(this.bgColor, amount=0.6) %>
      <div class="tile-shadow" style="box-shadow: 0px 36px 48px -32px <%= hex_to_rgb(color)  %>;">

      </div>
    </div>
  </a>
</li>
