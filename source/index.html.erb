title: Sebastian Graz
---

<%= partial "partials/nav", :locals => {:textColor => '#000' } %>


<div id="home" class="row">

  <div class="mt-l mb-xs abs">
    <h1>Sebastian GrÄ…z</h1>
    <p class="hide-md"> Interaction designer and a front-end developer based in London </p>
  </div>



  <ul class="tiles section" id="work">
    <% data.site.caseStudy.take(6).each do |id, this | %>
      <%= partial "partials/tile", :locals => { :this => this, :dir => 'cases/', :secondary => this.year }%>
    <% end %>
  </ul>

  <div class="mt-l mb-xs">
    <div class="flex-between">
      <h1>Recent articles <sup><%= data.site.blog.count %></sup></h1>
      <% if blog('blog').articles.count > 5%>
        <a href="/blog">Read all articles</a>
      <% end %>
    </div>
  </div>


  <ul class="tiles section" id="blog">
    <% data.site.blog.take(5).each do |id, this | %>
      <%= partial "partials/tile", :locals => { :this => this, :dir => 'blog/', :secondary => this.postedDate.strftime("%e %a")} %>
    <% end %>
  </ul>

  <div class="section" id="about">
      <%= partial "partials/about" %>
  </div>

</div>
